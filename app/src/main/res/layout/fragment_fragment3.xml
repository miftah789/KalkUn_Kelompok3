<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl601131835.kalkulator.Fragment3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="498dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/Btn6_id"
        android:layout_toRightOf="@+id/Btn6_id"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/jarijari"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rumusvol"
            android:hint="Jari-jari(r)"
            android:inputType="numberSigned"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        <EditText
            android:id="@+id/tinggimiring"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/jarijari"
            android:hint="Tinggi /SisiMiring"
            android:inputType="numberSigned"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        <Button
            android:id="@+id/volume"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="56dp"
            android:onClick="btnvol"
            android:text="VOLUME" />

        <Button
            android:id="@+id/lp"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/volume"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/volume"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:onClick="btnlp"
            android:text="LUAS PERMUKAAN" />

        <TextView
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tinggimiring"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        <TextView
            android:id="@+id/rumusvol"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rumusLP"
            android:text="VOL = 3.14 x R^2 x T / 3 "
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        <TextView
            android:id="@+id/rumusLP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="LP = 3.14 x R^2 + 3.14 x R x S"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />


    </RelativeLayout>


</FrameLayout>
